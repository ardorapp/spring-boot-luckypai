<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cash.pai.lucky.dao.UserAuthorityDao">
    <resultMap id="UserAuthority" type="cash.pai.lucky.entity.UserAuthorityEntity">
        <id property="userAuthorityId" column="user_authority_id"/>
        <result property="userId" column="user_id"/>
        <result property="authorityId" column="authority_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_authority_id, user_id,  authority_id,create_time,update_time
    </sql>

    <select id="findById" resultMap="UserAuthority" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        sys_user_authority
        WHERE user_authority_id= #{userAuthorityId}
    </select>

    <insert id="insert" parameterType="cash.pai.lucky.entity.UserAuthorityEntity">
		insert into sys_user_authority
        (
            user_authority_id, user_id,  authority_id,create_time,update_time
        )
		values
		(   #{userAuthorityId}, #{userId}, #{authorityId}, #{createTime},#{updateTime} )
	</insert>
</mapper>